{
	"compileOnSave": true,
	"compilerOptions": {
		"rootDir": "src/",
		"moduleResolution": "node",
		"module": "commonjs",
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"target": "es2016",
		"lib": ["es2016", "dom", "es2017", "dom.iterable"],
		"outDir": "build/",
		"types": ["node"]
	},
	"include": [
		"src/*.ts",
		"src/jasmine/spec/*.ts"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}
