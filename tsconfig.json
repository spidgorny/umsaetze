{
	"compileOnSave": true,
	"compilerOptions": {
		"rootDir": "src/",
		"moduleResolution": "node",
		"module": "commonjs",
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"target": "es2016",
		"lib": ["es2016", "dom", "es2017", "dom.iterable"],
		"outDir": "build/",
		"types": ["node"],
		"typeRoots": [
			// add path to @types
			"node_modules/@types"
		],
		"esModuleInterop": true,
		"jsx": "react"
	},
	"include": [
		"src/*.ts",
		"src/jasmine/spec/*.ts",
		"src/test/codecept/*.ts",
		"src/test/testRunner.ts",
		"src/test/jest/*.ts"
	],
	"exclude": [
		"node_modules",
		"build",
		"src/jasmine/spec/*.ts"
	]
}
