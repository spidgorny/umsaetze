{
	"compileOnSave": true,
	"compilerOptions": {
		"rootDir": "src/",
		"moduleResolution": "node",
		"module": "commonjs",
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"target": "es2016",
		"lib": ["es2016","dom"],
		"outDir": "build/"
	},
	"lib": ["es2016", "dom"],
	"include": [
		"src/*.ts",
		"src/*.test.ts"
	],
	"exclude": ["node_modules"]
}
